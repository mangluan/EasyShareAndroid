<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.ExploreRecommendGroupFragment">

    <View
        android:id="@+id/title_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation=".5dp"
        app:layout_constraintBottom_toBottomOf="@+id/magic_indicator"
        app:layout_constraintEnd_toEndOf="@+id/btn_edit_group"
        app:layout_constraintStart_toStartOf="@+id/magic_indicator"
        app:layout_constraintTop_toTopOf="@+id/magic_indicator" />

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation=".5dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="40dp" />

    <View
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_opacity_gradient"
        android:elevation=".5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_group"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_group"
        app:layout_constraintTop_toTopOf="@+id/btn_edit_group" />

    <ImageView
        android:id="@+id/btn_edit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation=".5dp"
        android:padding="10dp"
        android:src="@drawable/ic_menu_16"
        app:layout_constraintBottom_toBottomOf="@+id/magic_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magic_indicator" />

    <com.easyshare.view.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/magic_indicator">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/magic_indicator" />

    </com.easyshare.view.NestedScrollableHost>


</androidx.constraintlayout.widget.ConstraintLayout>