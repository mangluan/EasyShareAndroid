<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_layout"
        android:layout_width="48dp"
        app:cardElevation="0dp"
        android:layout_height="48dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_name"
        android:minWidth="60dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:lines="1"
        android:textColor="@color/black_translucence_eighty"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_layout"
        app:layout_constraintTop_toTopOf="@+id/avatar_layout"
        tools:text="用户名" />

    <TextView
        android:id="@+id/item_sign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:textSize="14sp"
        android:lines="1"
        android:textColor="@color/black_translucence"
        app:layout_constraintEnd_toStartOf="@+id/item_submit"
        app:layout_constraintStart_toEndOf="@+id/avatar_layout"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        tools:text="@tools:sample/lorem/random" />

    <Button
        android:id="@+id/item_submit"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:cornerRadius="16dp"
        android:textSize="12sp"
        app:strokeColor="#DDDDDD"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="互相关注" />

    <View
        android:id="@+id/CuttingLine"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/black_translucence_thirty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>