<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.MeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--标题-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="12sp"
                android:background="@color/main_navigation"
                android:paddingHorizontal="16dp"
                android:paddingTop="30dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar_layout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default_avatar" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:text="@string/not_login_name"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/avatar_layout"
                    app:layout_constraintTop_toTopOf="@+id/avatar_layout" />

                <TextView
                    android:id="@+id/title_subheading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    app:layout_constraintEnd_toStartOf="@+id/personal_center_text"
                    android:text="@string/not_login_subheading"
                    android:textColor="@color/black_translucence"
                    app:layout_constraintStart_toEndOf="@+id/avatar_layout"
                    app:layout_constraintTop_toBottomOf="@id/user_name" />

                <TextView
                    android:id="@+id/personal_center_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:singleLine="true"
                    android:text="@string/text_personal_center"
                    android:textColor="@color/black_translucence"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/personal_center_image"
                    app:layout_constraintEnd_toStartOf="@+id/personal_center_image"
                    app:layout_constraintTop_toTopOf="@+id/personal_center_image" />

                <ImageView
                    android:id="@+id/personal_center_image"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_next_12"
                    app:layout_constraintBottom_toBottomOf="@id/avatar_layout"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--足迹、关注、粉丝-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12sp"
                android:background="@drawable/shape_white">

                <View
                    android:id="@+id/center_view_1"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/browsing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_zero"
                    android:textColor="@color/black_translucence_eighty"
                    app:layout_constraintBottom_toTopOf="@+id/center_view_1"
                    app:layout_constraintEnd_toEndOf="@+id/browsing_button"
                    app:layout_constraintStart_toStartOf="@+id/browsing_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/shielding"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/browsing_button"
                    app:layout_constraintStart_toStartOf="@+id/browsing_button"
                    app:layout_constraintTop_toBottomOf="@+id/center_view_1" />

                <TextView
                    android:id="@+id/attention_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_null"
                    android:textColor="@color/black_translucence_eighty"
                    app:layout_constraintBottom_toTopOf="@+id/center_view_1"
                    app:layout_constraintEnd_toEndOf="@+id/attention_button"
                    app:layout_constraintStart_toStartOf="@+id/attention_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/attention"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/center_view_1" />

                <TextView
                    android:id="@+id/fans_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_null"
                    android:textColor="@color/black_translucence_eighty"
                    app:layout_constraintBottom_toTopOf="@+id/center_view_1"
                    app:layout_constraintEnd_toEndOf="@+id/fans_button"
                    app:layout_constraintStart_toStartOf="@+id/fans_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/fans"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/fans_button"
                    app:layout_constraintStart_toStartOf="@+id/fans_button"
                    app:layout_constraintTop_toBottomOf="@+id/center_view_1" />

                <View
                    android:id="@+id/browsing_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/attention_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/attention_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fans_button"
                    app:layout_constraintStart_toEndOf="@+id/browsing_button"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/fans_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/attention_button"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--点赞、图文、图册-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12sp"
                android:background="@drawable/shape_white">

                <View
                    android:id="@+id/center_view_2"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_24"
                    app:layout_constraintBottom_toTopOf="@+id/center_view_2"
                    app:layout_constraintEnd_toEndOf="@+id/like_button"
                    app:layout_constraintStart_toStartOf="@+id/like_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/like"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/like_button"
                    app:layout_constraintStart_toStartOf="@+id/like_button"
                    app:layout_constraintTop_toBottomOf="@+id/center_view_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_24"
                    app:layout_constraintBottom_toTopOf="@+id/center_view_2"
                    app:layout_constraintEnd_toEndOf="@+id/photo_button"
                    app:layout_constraintStart_toStartOf="@+id/photo_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/photo"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/photo_button"
                    app:layout_constraintStart_toStartOf="@+id/photo_button"
                    app:layout_constraintTop_toBottomOf="@+id/center_view_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_album_24"
                    app:layout_constraintBottom_toTopOf="@+id/center_view_2"
                    app:layout_constraintEnd_toEndOf="@+id/album_button"
                    app:layout_constraintStart_toStartOf="@+id/album_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/album"
                    android:textColor="@color/black_translucence_eighty"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/album_button"
                    app:layout_constraintStart_toStartOf="@+id/album_button"
                    app:layout_constraintTop_toBottomOf="@+id/center_view_2" />

                <View
                    android:id="@+id/like_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/photo_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/photo_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/album_button"
                    app:layout_constraintStart_toEndOf="@+id/like_button"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/album_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/photo_button"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--设置-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12sp"
                android:background="@drawable/shape_white"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    android:text="@string/setting"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <!--                帐号安全-->
                <LinearLayout
                    android:id="@+id/account_security_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_security"
                        android:textColor="@color/black_translucence_eighty"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_12" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/black_translucence_thirty" />

                <!--                消息通知-->
                <LinearLayout
                    android:id="@+id/message_notification_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/message_notification"
                        android:textColor="@color/black_translucence_eighty"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_12" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/black_translucence_thirty" />

                <!--                屏蔽管理-->
                <LinearLayout
                    android:id="@+id/shielding_management_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shielding_management"
                        android:textColor="@color/black_translucence_eighty"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_12" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/black_translucence_thirty" />

                <!--                清理缓存-->
                <LinearLayout
                    android:id="@+id/clear_cache_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/clear_cache"
                        android:textColor="@color/black_translucence_eighty"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cache_size_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        tools:text="0M"
                        android:textColor="@color/black_translucence_eighty"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_12" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/black_translucence_thirty" />

                <!--                关于软件-->
                <LinearLayout
                    android:id="@+id/about_software_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/about_software"
                        android:textColor="@color/black_translucence_eighty"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_next_12" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:text="@string/logout"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_navigation"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>