<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.album.DetailsImageTextFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/text_details_image_text" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:id="@+id/head_layout"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="27dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:minWidth="120dp"
        android:textColor="@color/black_translucence_eighty"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/time_tv"
        app:layout_constraintStart_toEndOf="@+id/head_layout"
        app:layout_constraintTop_toTopOf="@+id/head_layout"
        tools:text="Test user name" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:minWidth="60dp"
        android:textColor="@color/black_translucence"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/head_layout"
        app:layout_constraintStart_toEndOf="@+id/head_layout"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        tools:text="4 minutes ago" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:minWidth="120dp"
        android:textColor="@color/black_translucence_eighty"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/head_layout"
        tools:text="Today is a great day. " />

    <androidx.viewpager2.widget.ViewPager2
        android:orientation="horizontal"
        android:id="@+id/image_view_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toTopOf="@+id/action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_tv" />

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="24dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/action_bar"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#F4F4F4"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:padding="10dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textSize="12sp"
            android:textColor="@color/black_translucence"
            app:drawableTopCompat="@drawable/ic_comment_18" />

        <TextView
            android:padding="10dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/like"
            android:textColor="@color/black_translucence"
            app:drawableTopCompat="@drawable/ic_like_18"/>


        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <EditText
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:hint="发布评论..."
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>