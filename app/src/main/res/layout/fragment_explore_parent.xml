<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.main.ExploreParentFragment">

    <View
        android:id="@+id/title_background"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/main_navigation"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="@dimen/main_text_size"
        android:elevation="1dp"
        android:textColor="@color/black_translucence_eighty"
        android:text="@string/nav_explore"
        app:layout_constraintTop_toTopOf="@+id/title_background"
        app:layout_constraintBottom_toBottomOf="@+id/title_background"
        app:layout_constraintStart_toStartOf="@+id/title_background"
        app:layout_constraintEnd_toEndOf="@+id/title_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/share_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="1dp"
        android:padding="6dp"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/title_background"
        app:layout_constraintEnd_toEndOf="@+id/title_background" />

    <ImageView
        android:id="@+id/search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="1dp"
        android:padding="6dp"
        android:src="@drawable/ic_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/title_background"
        app:layout_constraintStart_toStartOf="@+id/title_background" />


    <View
        android:id="@+id/subheading_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation=".5dp"
        app:layout_constraintBottom_toBottomOf="@+id/magic_indicator"
        app:layout_constraintEnd_toEndOf="@+id/btn_edit_group"
        app:layout_constraintStart_toStartOf="@+id/magic_indicator"
        app:layout_constraintTop_toTopOf="@+id/magic_indicator" />

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation=".5dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_background"
        tools:layout_height="40dp" />

    <View
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_opacity_gradient"
        android:elevation=".5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_group"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_group"
        app:layout_constraintTop_toTopOf="@+id/btn_edit_group" />

    <ImageView
        android:id="@+id/btn_edit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation=".5dp"
        android:padding="10dp"
        android:src="@drawable/ic_menu_16"
        app:layout_constraintBottom_toBottomOf="@+id/magic_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magic_indicator" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/magic_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>