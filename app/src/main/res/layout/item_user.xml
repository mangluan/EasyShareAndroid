<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="192dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="4dp"
    android:background="@color/white" >

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_layout"
            android:layout_width="60dp"
            app:cardElevation="0dp"
            android:layout_height="60dp"
            android:layout_marginVertical="12dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="14dp"
            android:textColor="@color/black_translucence_eighty"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/avatar_layout"
            app:layout_constraintTop_toTopOf="@+id/avatar_layout"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/item_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:lines="1"
            android:textColor="@color/black_translucence"
            app:layout_constraintEnd_toStartOf="@+id/item_submit"
            app:layout_constraintStart_toEndOf="@+id/avatar_layout"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            tools:text="@tools:sample/lorem/random" />

        <Button
            android:id="@+id/item_submit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textColor="@color/black_translucence"
            app:cornerRadius="16dp"
            android:textSize="12sp"
            app:rippleColor="#DDDDDD"
            app:strokeColor="#DDDDDD"
            app:strokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="关注" />

    </LinearLayout>

</androidx.cardview.widget.CardView>