<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyShare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EasyShare.MainActivity">
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_navigation</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="Theme.EasyShare.LightGrayStatusBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
    </style>

    <style name="Theme.EasyShare.TransparentStatusBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="Theme.EasyShare.LightGrayWindowBackground">
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="Theme.EasyShare.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.EasyShare.CropImage">
        <item name="colorPrimary">@color/light_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="SpinnerButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="strokeColor">#55000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">#11000000</item>
        <item name="android:textColor">@color/black_translucence</item>
    </style>

    <style name="Theme.EasyShare.WhiteTheme">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/black_translucence_eighty</item>
        <item name="toolbarStyle">@style/ToolbarWhiteTheme</item>
    </style>

    <style name="Theme.EasyShare.WhiteTheme.LightGrayWindowBackground">
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="ToolbarWhiteTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black_translucence_eighty</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.MaterialComponents.Button">
        <item name="strokeColor">#55000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">#11000000</item>
    </style>


</resources>